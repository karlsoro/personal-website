# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/personal-website
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/personal-website

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ORIGIN_PROD=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Azure Configuration (for production deployment)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_FUNCTION_URL=your-azure-function-url
